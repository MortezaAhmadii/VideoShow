<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






        <RelativeLayout
            android:layout_width="@dimen/dp170"
            android:layout_height="@dimen/dp170"
            android:id="@+id/vid_relative"
            android:layout_marginRight="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/img_video"
                android:scaleType="fitXY"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_video"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:id="@+id/video_title"
                />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/video_title"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/video_dec"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/Linear_row"
                android:layout_below="@+id/video_dec"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_vid"
                    android:textSize="10sp"

                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/ic_baseline_remove_red_eye_24"
                    android:layout_toLeftOf="@+id/view_vid"/>


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Video_time"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_below="@+id/video_dec"
                android:layout_marginStart="@dimen/dp4"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginEnd="@dimen/dp4"
                android:layout_alignParentLeft="true"
                android:textSize="10sp" />








        </RelativeLayout>





</RelativeLayout>